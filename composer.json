{
    "name": "joeymckenzie/facadeless",
    "description": "PHPStan plugin for banning facades within Laravel projects.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "phpstan",
        "laravel",
        "facades"
    ],
    "authors": [
        {
            "name": "Joey McKenzie",
            "email": "joey.mckenzie27@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "illuminate/contracts": "^12.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "laravel/framework": "^12.12",
        "laravel/pint": "^1.23",
        "peckphp/peck": "^0.1.3",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.2",
        "rector/rector": "^2.1"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Facadeless\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "check": [
            "@fmt:test",
            "@lint",
            "@refactor:test",
            "@typos"
        ],
        "ci": [
            "@lint:ci",
            "@fmt:test",
            "@refactor:test",
            "@test",
            "@typos"
        ],
        "fix": [
            "@refactor",
            "@fmt"
        ],
        "fmt": "vendor/bin/pint --parallel",
        "fmt:test": "vendor/bin/pint --test --parallel",
        "lint": "XDEBUG_MODE=off vendor/bin/phpstan analyze",
        "lint:ci": "XDEBUG_MODE=off vendor/bin/phpstan analyze --error-format=github",
        "lint:clear": "vendor/bin/phpstan clear-result-cache",
        "prep": [
            "@fix",
            "@check"
        ],
        "prepare": "git config core.hookspath .githooks",
        "refactor": "vendor/bin/rector process",
        "refactor:test": "vendor/bin/rector process --dry-run",
        "test": [
            "@fmt",
            "XDEBUG_MODE=off vendor/bin/phpunit"
        ],
        "test:coverage": [
            "@fmt",
            "XDEBUG_MODE=coverage vendor/bin/phpunit --log-junit 'reports/unitreport.xml' --coverage-clover 'reports/clover.xml'"
        ],
        "typos": "vendor/bin/peck"
    }
}
